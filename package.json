{
  "name": "@mozilla-ai/mcpd",
  "version": "0.0.1",
  "description": "JavaScript/TypeScript SDK for interacting with mcpd",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . && npm run typecheck:all",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "typecheck:tests": "tsc --noEmit --project tsconfig.test.json",
    "typecheck:all": "npm run typecheck && npm run typecheck:tests",
    "check": "npm run format && npm run lint:fix && npm run typecheck:all && npm test && npm run build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "mcpd",
    "model-context-protocol",
    "ai",
    "llm",
    "tools",
    "sdk",
    "typescript",
    "javascript"
  ],
  "author": "Mozilla AI",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla-ai/mcpd-sdk-javascript.git"
  },
  "bugs": {
    "url": "https://github.com/mozilla-ai/mcpd-sdk-javascript/issues"
  },
  "homepage": "https://github.com/mozilla-ai/mcpd-sdk-javascript#readme",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "lru-cache": "^11.2.2",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "prettier": "^3.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.46.0",
    "vite": "^7.1.9",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "packageManager": "npm@10.0.0"
}
